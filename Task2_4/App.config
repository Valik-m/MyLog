<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="TextListenerSettings" type ="TextListener.TextListenerConfig, TextListener"/>
    <section name="WordListenerSettings" type ="WordListener.WordListenerConfig, WordListener"/>
    <section name="EventLogListenerSettings" type ="EventLogListener.EventLogListenerConfig, EventLogListener"/>
    <section name="LoggerSettings" type ="Logger.LoggerConfig, Logger"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup> 
  <TextListenerSettings>
    <general path =".\TextListener\" fileName ="log.txt"/>
  </TextListenerSettings>
  <WordListenerSettings>
    <general path =".\WordListener\" fileName ="log.docx"/>
  </WordListenerSettings>
  <EventLogListenerSettings>
    <general path =".\WordListener\" fileName ="log.docx"/>
  </EventLogListenerSettings>
  <LoggerSettings>
    <general name ="MyLogger"/>
  </LoggerSettings>
</configuration>